---
import "./UnderConstruction.css";
import background from "../assets/background.svg";
import logo from "../assets/logo.svg";
import linkedin from "../assets/linkedin.svg";
import line from "../assets/line.svg";
---

<div class="relative flex w-screen h-dvh bg-[#141416] text-white">
  <img
    class="absolute top-0 left-0 w-full h-full object-cover"
    src={background.src}
    alt="Background"
  />

  <main class="flex flex-col w-5xl mx-auto">
    <nav>
      <img
        class="w-2/3 lg:w-1/3 h-full object-contain mt-2 lg:mt-10"
        src={logo.src}
        alt="Logo"
        loading="eager"
      />
    </nav>
    <section
      class="flex flex-col items-center justify-center w-full h-full mx-auto gap-y-10 p-8 text-center"
    >
      <div
        class="flex flex-col justify-center items-center w-full lg:w-2/3 space-y-4"
      >
        <h1 class="bebas-font w-full text-4xl lg:text-7xl text-balance">
          UNDER CONSTRUCTION
        </h1>
        <img src={line.src} alt="Line" />
      </div>
      <a
        href="https://www.linkedin.com/in/miguellinarte/"
        class="w-16 h-16 hover:scale-110 z-10"
        target="_blank"
      >
        <img src={linkedin.src} alt="Miguel Linarte on LinkedIn" />
      </a>
    </section>
  </main>
</div>
